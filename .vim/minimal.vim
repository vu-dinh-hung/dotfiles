filetype plugin indent on

set mouse=a
set ttymouse=sgr

syntax enable
set number
set ruler
set cursorline

set expandtab
set tabstop=4
set shiftwidth=4

set hlsearch
set incsearch
set ignorecase
set smartcase

set clipboard=unnamed

" Mappings
map <SPACE> <Leader>

nnoremap ; :
nnoremap : ;
vnoremap ; :
vnoremap : ;

vnoremap < <gv
vnoremap > >gv
